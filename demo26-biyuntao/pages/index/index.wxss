}

/* 红包弹窗1 */

.red1-modal {
  position: fixed;
  z-index: 100;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  justify-content: center;
}

.red1-modal .bg {
  position: absolute;
  background-color: rgba(0, 0, 0, 0.4);
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}

.red1-modal .red1-panel {
  position: absolute;
  left: 0;
  right: 0;
  justify-content: center;
}

.red1-panel .red1-bg {
  width: 400rpx;
}

.red1-panel .red1-bg-active {
  width: 400rpx;
  animation: toBig 3s ease-in 2s 1;
}

@keyframes toBig {
  0% {
    width: 0rpx;
  }

  100% {
    width: 400rpx;
  }
}

.red1-panel .red1-close {
  position: absolute;
  width: 60rpx;
  right: 120rpx;
  top: -20rpx;
}

.red1-panel .getRed {
  position: absolute;
  width: 268rpx;
  bottom: 160rpx;
  left: 50%;
  margin-left: -134rpx;
}

.red1-panel button {
  position: absolute;
  width: 268rpx;
  bottom: 60rpx;
  left: 50%;
  margin: 0;
  margin-left: -134rpx;
  padding: 0;
  border: none;
  border-radius: 60rpx;
}

.red1-panel button::after {
  border: none;
}

.red1-panel button image {
  width: 100%;
}

