.goods-title {
  justify-content: center;
  height: 90rpx;
  font-size: 32rpx;
  color: #f65314;
}

.goods-title image {
  width: 50rpx;
  margin-right: 10rpx;
}

.goods-scroll {
  overflow: hidden;
  white-space: nowrap;
  height: 280rpx;
}

.goods-scroll-list {
  margin-left: 30rpx;
}

.goods-scroll-item {
  width: 200rpx;
  margin-right: 30rpx;
  display: inline-block;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
}

.goods-scroll-item  image {
  width: 100%;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
}

.goods-scroll-item .goods-item-border {
  border: 1px solid #e1e1e1;
  box-sizing: border-box;
  padding: 0 10rpx;
  border-bottom-left-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
}

.goods-scroll-item .goods-item-title {
  color: #666;
  font-size: 24rpx;
  white-space: nowrap;
  width: 100%;
  line-height: 1.5;
  overflow: hidden;
  text-overflow: ellipsis;
}

.goods-scroll-item .goods-item-price {
  text-align: left;
  font-size: 20rpx;
  white-space: nowrap;
  width: 100%;
  line-height: 1.8;
  overflow: hidden;
  text-overflow: ellipsis;
}

.goods-item-price .goods-item-new {
  font-family: Arial;
  color: #f65314;
  margin-right: 10rpx;
}

.goods-item-new text {
  color: #999;
}

.goods-col-list {
  flex-wrap: wrap;
  justify-content: space-between;
}

.goods-col-item {
  width: 360rpx;
  margin-bottom: 30rpx;
}

.goods-col-item image {
  width: 100%;
}

.goods-col-item .goods-col-border {
  border: 1px solid #e1e1e1;
  border-top: none;
  box-sizing: border-box;
  padding: 10rpx 20rpx;
}

.goods-col-border .goods-col-title {
  color: #666;
  font-size: 30rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.goods-col-border .goods-col-price {
  color: #666;
  font-size: 24rpx;
  line-height: 1.8;
}

.goods-col-price view {
  color: #f65314;
  margin-right: auto;
}

.goods-col-price text {
  color: #f65314;
}
