<view class="body">
    <!-- 新品横 -->
    <view class='goods-row'>
        <view class='goods-title flex-center'>
            <image src='{{iconUrl.newImg}}' mode='widthFix'></image>
            限时试新
        </view>
        <scroll-view scroll-x="true" class="goods-scroll" scroll-left="0">
            <view class="goods-scroll-list">
                <view class="goods-scroll-item" wx:for="{{scrollDatas}}" wx:key="index" data-id='{{item.id}}'
                      catchtap='lookDetail'>
                    <image src="{{item.logo}}" mode="widthFix"></image>
                    <view class='goods-item-border'>
                        <view class="goods-item-title">{{item.name}}</view>
                        <view class="goods-item-price flex-center">
                            <view>尝新价：</view>
                            <view class="goods-item-new">
                                {{"¥"+item.price}}
                                <text>{{"/"+item.unit}}</text>
                            </view>
                        </view>
                    </view>
                </view>
            </view>
        </scroll-view>
    </view>
    <!-- 新品竖 -->
    <view class='goods-col'>
        <view class='goods-title flex-center'>
            <image src='{{iconUrl.newImg}}' mode='widthFix'></image>
            精选新品
        </view>
        <view class='goods-col-list flex-center'>
            <view class='goods-col-item' wx:for="{{listDatas}}">
                <image src='{{item.logo}}' mode='widthFix'></image>
                <view class='goods-col-border'>
                    <view class='goods-col-title'>{{item.name}}</view>
                    <view class='goods-col-price flex-center'>
                        <view>{{'¥'+item.price}}</view>
                        已有
                        <text>{{item.number}}</text>
                        人购买
                    </view>
                </view>
            </view>
        </view>
        <!-- loading -->
        <view class='loading-show'>
            <view>loading...</view>
        </view>
        <!-- 我也是有底线的 -->
        <view class='loading-show'>
            <view>我也是有底线的</view>
        </view>
    </view>

</view>