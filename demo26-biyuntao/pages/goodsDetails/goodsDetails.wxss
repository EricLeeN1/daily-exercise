.body {
    background-color: #f7f8f9;
    color: #333;
}

.swiper {
    height: 360rpx;
}

.swiper swiper-item {
    position: relative;
}

swiper-item view {
    position: absolute;
    right: 0;
    bottom: 0;
    /* background-color: red; */
    padding: 10rpx 20rpx;
    color: #999;
}

.swiper .slide-image {
    width: 100%;
    height: 360rpx;
}

.swiper image {
    width: 100%;
}

.price-detail {
    background-color: #fff;
    padding: 20rpx 30rpx;
    justify-content: space-between;
}

.price-detail image {
    width: 50rpx;
}

.price-detail .goods-price text {
    font-size: 24rpx;
    color: #666;
    text-decoration: line-through;
}

.price-detail .goods-price view {
    color: #f65314;
    font-size: 40rpx;
    text-decoration: none;
    margin-right: 10rpx;
}

.price-detail .goods-number {
    color: #666;
    align-self: flex-start;
    font-size: 30rpx;
}

.price-detail .price-detail-right {
    font-size: 26rpx;
    padding-left: 30rpx;
    padding-right: 0;
    color: #666;
    margin-right: 0;
    background-color: #fff;
    line-height: 1.5;
    border: none;
}

.price-detail .price-detail-right::after {
    border: none;
}

.goods-title {
    background-color: #fff;
    color: #333;
    padding: 0 30rpx;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
    margin-bottom: 20rpx;
}

.goods-des {
    background-color: #fff;
    font-size: 26rpx;
    color: #666;
    padding: 0 30rpx;
    margin-bottom: 20rpx;
}

.service-detail {
    background-color: #ccc;
    padding-bottom: 20rpx;
    margin-bottom: 20rpx;
    color: #999;
}

.service-detail .more {
    width: 40rpx;
}

.service-detail .service-title {
    align-self: flex-start;
    padding: 20rpx 30rpx;
    font-size: 30rpx;
    color: #666;
}

.service-detail .service-title image {
    width: 60rpx;
    margin-right: 20rpx;
}

.service-detail .service-list {
    justify-content: space-between;
    padding-left: 30rpx;
    width: 100%;
    box-sizing: border-box;
}

.service-detail .service-item {
    font-size: 24rpx;
}

.service-item image {
    width: 40rpx;
    margin-right: 10rpx;
}

.comments {
    background-color: #fff;
}

.comments .comments-title {
    padding: 20rpx 30rpx;
    justify-content: space-between;
    border-bottom: 1px solid #e1e1e1;
    color: #666;
    font-size: 30rpx;
}

.comments-title .comments-more {
    color: #999;
    font-size: 26rpx;
}

.comments-more image {
    width: 40rpx;
    margin-left: 10rpx;
}
