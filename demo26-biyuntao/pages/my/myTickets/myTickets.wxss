.body {
  background-color: #f7f8f9;
  min-height: 100vh;
}

.weui-navbar {
  height: 100rpx;
  line-height: 100rpx;
  overflow: hidden;
  display: flex;
  background-color: #fff;
  justify-content: center;
  flex-direction: column;
  white-space: nowrap;
  position: relative;
  border-bottom: 1px solid #e1e1e1;
  margin-bottom: 20rpx;
}

.weui-navbar__item {
  display: inline-block;
  text-align: center;
  color: #666;
  width: 250rpx;
  height: 100rpx;
}

.weui-navbar__slider {
  position: absolute;
  content: " ";
  left: 0;
  top: 94rpx;
  width: 250rpx;
  height: 6rpx;
  background-color: #f65314;
  -webkit-transition: -webkit-transform 0.3s;
  transition: -webkit-transform 0.3s;
  transition: transform 0.3s;
}

.weui-navbar__title {
  display: inline-block;
  font-size: 14px;
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  word-wrap: normal;
}

.weui-navbar .weui-navbar__item_on {
  color: #f65314;
}

.no-tickets{
    margin-top: 100rpx;
    font-size: 36rpx;
    color: #666;
}
.no-tickets image{
    width: 180rpx;
    margin-bottom: 30rpx;
}

.tickets-item{
  background-color: #fff;
  padding: 0 30rpx;
  position: relative;
  color: #fff;
  margin-bottom: 20rpx;
}

.tickets-bg {
  position: absolute;
  z-index: 0;
  width: 690rpx;
}

.denomination {
  padding: 20rpx 30rpx;
  z-index: 1;
  flex-direction: column;
  align-items: flex-start;
}

.tickets-number {
  font-size: 26rpx;
  line-height: 1.2;
}

.tickets-number text {
  font-size: 50rpx;
}

.tickets-name {
  font-size: 26rpx;
  line-height: 1.5;
}

.valid-time {
  font-size: 26rpx;
  line-height: 1.5;
}

.riceive-now {
  width: 120rpx;
  margin-right: 20rpx;
  border-radius: 10rpx;
  z-index: 1;
  font-size: 30rpx;
  margin-left: auto;
  text-align: center;
  border: 1px solid #e1e1e1;
}
