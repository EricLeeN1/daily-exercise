.body {
  background-color: #f7f8f9;
  min-height: 100vh;
}

.weui-navbar {
  height: 100rpx;
  line-height: 100rpx;
  overflow: hidden;
  display: flex;
  background-color: #fff;
  justify-content: center;
  flex-direction: column;
  white-space: nowrap;
  position: relative;
  border-bottom: 1px solid #e1e1e1;
  margin-bottom: 20rpx;
}

.weui-navbar__item {
  display: inline-block;
  text-align: center;
  color: #666;
  width: 250rpx;
  height: 100rpx;
}

.weui-navbar__slider {
  position: absolute;
  content: " ";
  left: 0;
  top: 94rpx;
  width: 250rpx;
  height: 6rpx;
  background-color: #f65314;
  -webkit-transition: -webkit-transform 0.3s;
  transition: -webkit-transform 0.3s;
  transition: transform 0.3s;
}

.weui-navbar__title {
  display: inline-block;
  font-size: 14px;
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  word-wrap: normal;
}

.weui-navbar .weui-navbar__item_on {
  color: #f65314;
}

.no-tickets{
    margin-top: 100rpx;
    font-size: 36rpx;
    color: #666;
}
.no-tickets image{
    width: 180rpx;
    margin-bottom: 30rpx;
}