.body {
  background-color: #f7f8f9;
  min-height: 100vh;
}

.logistics-header {
  background-color: #fff;
  margin-bottom: 20rpx;
  padding: 0 30rpx;
}

.logistics-header image {
  width: 160rpx;
  margin-right: 20rpx;
}

.logistics-header .logistics-title {
  height: 200rpx;
  justify-content: center;
  align-items: flex-start;
  font-size: 32rpx;
  color: #999;
}

.logistics-title .logistics-company {
  color: #333;
}

.logistics-company text {
  color: #f65314;
}

.logistics-number view {
  padding: 6rpx 10rpx;
  border: 1px solid #e1e1e1;
  border-radius: 10rpx;
  font-size: 26rpx;
  margin-left: 10rpx;
}

.logistics-phone text {
  color: #00a1f1;
}

.logistics-list-title {
  border-bottom: 1px solid #e1e1e1;
  font-size: 30rpx;
  background-color: #fff;
  color: #999;
  padding: 0 30rpx;
}

.logistics-list-title text {
  margin-right: auto;
  color: #333;
  line-height: 100rpx;
}

.logistics-list-title image {
  width: 40rpx;
  margin-left: 10rpx;
}

.logistics-list {
  background-color: #fff;
  padding-left: 30rpx;
}

.logistics-list .no-infos {
  justify-content: center;
  padding-right: 30rpx;
  color: #ccc;
}

.no-infos image {
  width: 200rpx;
  margin: 20rpx auto;
}

.logistics-list .logistics-item {
}

.logistics-item .logistics-item-point {
  width: 100rpx;
  background-color: #fff;
  height: 180rpx;
  margin-right: 20rpx;
  position: relative;
}

.logistics-item-point view {
  background-color: #e1e1e1;
  width: 4rpx;
  position: absolute;
  top: 0;
  bottom: 0;
  left: 50%;
  margin-left: -2rpx;
}

.logistics-item-point text {
  background-color: #e1e1e1;
  width: 32rpx;
  height: 32rpx;
  position: absolute;
  top: 40rpx;
  left: 50%;
  margin-left: -16rpx;
  border-radius: 50%;
}

.logistics-item .logistics-item-content {
  flex: auto;
  justify-content: center;
  font-size: 30rpx;
  height: 180rpx;
  align-items: flex-start;
  border-bottom: 1px solid #e1e1e1;
  box-sizing: border-box;
  color: #999;
}

.logistics-item-content text {
  font-size: 26rpx;
  margin-top: 10rpx;
}

.logistics-list .logistics-item-active {
}

.logistics-item-active .logistics-item-point view {
  top: 40rpx;
}

.logistics-item-active .logistics-item-point text {
  background-color: #f65314;
   box-shadow: 0 0 0 10rpx rgba(246, 83, 20, .4);
}

.logistics-item-active .logistics-item-content {
  color: #f65314;
}
