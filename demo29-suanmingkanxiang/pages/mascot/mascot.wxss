.body {
  width: 100vw;
  height: 100vh;
  overflow-x: hidden;
}

image {
  display: flex;
}

.flex-center {
  display: flex;
  align-items: center;
}

/* 商品列表部分 */

.containers {
  width: 100vw;
  position: relative;
  /* margin-top: 90rpx; */
}

.containers .goods-type-scroll image {
  width: 30rpx;
}

.containers  .goods-item {
  background-color: #fff;
  border-bottom: 1rpx dashed #dedfe0;
  flex-direction: column;
  justify-content: center;
  padding: 0 30rpx;
}

.goods-item .goods-item-show {
  width: 100%;
  height: 300rpx;
  border-bottom: 1rpx dashed #dedfe0;
}

.goods-item .goods-logo {
  width: 160rpx;
  border-radius: 6rpx;
  margin-right: 30rpx;
  flex: 0 0 160rpx;
}

.goods-item .goods-infos {
  flex-direction: column;
  align-items: flex-start;
  /* flex: 0 0 400rpx; */
  width: auto;
}

.goods-infos .goods-name {
  font-size: 30rpx;
  line-height: 46rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  color: #333;
  font-weight: bold;
}

.goods-infos .goods-price-com {
  font-size: 26rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  color: #999;
  margin-top: 20rpx;
}

.goods-infos .goods-infos-detail {
  justify-content: space-between;
  font-size: 30rpx;
  width: 100%;
  margin-top: 20rpx;
}

.goods-infos-detail .goods-infos-price {
  color: #f55053;
}

.goods-infos-detail .goods-buy {
  color: #f55053;
  background-color: #fff;
  border-radius: 10rpx;
  padding: 10rpx 20rpx;
  border: 1px solid #f55053;
  box-sizing: border-box;
}

.goods-infos-detail .goods-buy-active {
  color: #fff;
  background-color: #f55053;
}



/* 视频弹窗 */

.video-modal {
  position: fixed;
  z-index: 100;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  justify-content: center;
}

.video-modal .bg {
  position: absolute;
  background-color: rgba(0, 0, 0, 0.4);
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}

.video-modal .video-nodal-panel{
  background-color: #fff;
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
}
/* .video-modal .video-close {
  position: absolute;
  width: 60rpx;
  right: 15rpx;
  top: 50%;
  margin-top: -200rpx;
} */
.video-nodal-panel video{
  width: 100%;
  height: 600rpx;
}
.video-nodal-panel view{
  background-color: #f55053;
  color: #fff;
  line-height: 80rpx;
  margin-top: 30rpx;
  text-align: center;
}


/* 弹窗 */

.goods-info-modal-bg {
  position: fixed;
  z-index: 100;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: transparent;
  justify-content: center;
}

.goods-info-modal-bg .goods-info-bg {
  position: absolute;
  z-index: 99;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
}

.goods-info-modal {
  z-index: 100;
  background-color: #fff;
  width: 630rpx;
  justify-content: space-between;
  border-radius: 10rpx;
}

.goods-modal-title {
  height: 80rpx;
  padding: 0 30rpx;
}

.goods-modal-title text {
   margin-right: auto; 
  /* text-align: center; */
  font-size: 30rpx;
}

.goods-modal-title .goods-modal-close {
  height: 100%;
  line-height: 80rpx;
}

.goods-info-modal .goods-modal-logo {
  width: 100%;
}

.goods-info-modal .goods-infos {
  padding: 0 30rpx;
  align-items: flex-start;
  flex-direction: column;
}

.goods-info-modal .goods-number {
  margin-left: auto;
}

.goods-info-modal .goods-number .number{
  margin: 0 20px;
}
.goods-info-modal .goods-infos-detail {
  width: 100%;
}

.goods-info-modal .goods-add  image,.goods-info-modal .goods-reduce  image{
  width: 40rpx;
}

.goods-info-modal .goods-ok-btn {
  margin: 30rpx 0 30rpx auto;
  background-color: #f55053;
  line-height: 60rpx;
  height: 60rpx;
  font-size: 30rpx;
  padding: 0 30rpx;
  border-radius: 10rpx;
  color: #fff;
}

.goods-info-modal .goods-ok-btn-active {
  border: 1px solid #f55053;
  color: #f55053;
  background-color: #fff;
  box-sizing: border-box;
}
