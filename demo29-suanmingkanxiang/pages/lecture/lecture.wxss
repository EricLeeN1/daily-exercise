.body {
  min-height: 100vh;
}

swiper {
  height: 100vh;
  overflow-x: hidden;
}

.lecture-banner {
}

.lecture-banner image {
  width: 100%;
}

.lecture-list {
  padding: 30rpx;
}

.lecture-list .lecture-item {
  font-size: 30rpx;
  justify-content: center;
  border-bottom: 1px dashed #e1e1e1;
  position: relative;
}

.lecture-item view {
  flex: 0 0 250rpx;
  /* background-color: #f55053; */
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
  margin: 20rpx 0;
  color: #f55053;
  font-weight: bold;
  align-self: flex-start;
}

.lecture-item text {
  flex: 0 0 360rpx;
  width: 360rpx;
  max-height: 270rpx;
  margin: 20rpx 0;
}

.lecture-item .video {
  flex: 0 0 360rpx;
  width: 360rpx;
  padding: 0;
  position: relative;
}

.lecture-item .video .image {
  width: 100%;
}

.lecture-item .video .videoicon {
  position: absolute;
  width: 100rpx;
  top: 50rpx;
  left: 50%;
  margin-left: -50rpx;
}

.lecture-label {
  position: fixed;
  left: 0;
  top: 300rpx;
  /* height: 80rpx; */
  line-height: 60rpx;
  background-color: #f55053;
  color: #fff;
  border-top-right-radius: 40rpx;
  border-bottom-right-radius: 40rpx;
  padding: 10rpx 20rpx;
  font-size: 30rpx;
}

.attend-lecture {
  justify-content: center;
  margin: 30rpx 0;
  margin-top: 0;
  font-size: 30rpx;
}

.attend-lecture text {
  background-color: #999;
  color: #fff;
  padding: 15rpx 50rpx;
  border-radius: 50rpx;
}

.attend-lecture view {
  background-color: #f55053;
  color: #fff;
  padding: 15rpx 50rpx;
  border-radius: 50rpx;
}

/* 视频弹窗 */

.video-modal {
  position: fixed;
  z-index: 100;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  justify-content: center;
}

.video-modal .bg {
  position: absolute;
  background-color: rgba(0, 0, 0, 0.4);
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}

.video-modal .video-nodal-panel{
  background-color: #fff;
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
}
