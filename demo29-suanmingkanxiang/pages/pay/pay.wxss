.body {
  background-color: #f7f8f9;
}

.address {
  padding: 0 30rpx;
  font-size: 30rpx;
  height: 160rpx;
  margin-bottom: 20rpx;
  background-color: #fff;
}

.address .address-img {
  width: 60rpx;
  margin-right: 20rpx;
}

.address .address-more {
  width: 40rpx;
  margin-left: auto;
}

.address .address-infos {
  align-items: flex-start;
}

.order-list {
  margin-bottom: 20rpx;
  background-color: #fff;
}

.order-list .order-item {
  margin-bottom: 20rpx;
}

.order-item .order-title {
  font-size: 30rpx;
  color: #333;
  padding: 0 30rpx;
  height: 100rpx;
}

.order-title image {
  width: 60rpx;
  margin-right: 20rpx;
}

.order-title view {
  margin-left: auto;
  color: #f55053;
}

.order-item .order-goods-list {
  padding: 0 30rpx;
  background-color: #f7f8f9;
}

.order-goods-list .order-goods-item {
  border-bottom: 1px solid #e1e1e1;
}

.order-goods-item .order-goods-logo {
  width: 160rpx;
  flex: 0 0 160rpx;
  margin-right: 20rpx;
}

.order-goods-item .order-goods-des {
  height: 200rpx;
}

.order-goods-des .order-goods-name {
  color: #333;
  font-size: 26rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  margin-top: 20rpx;
}

.order-goods-des text {
  color: #999;
  font-size: 24rpx;
}

.order-goods-item .order-goods-price {
  color: #999;
  font-size: 24rpx;
  line-height: 50rpx;
}

.choice-num-change {
  margin-left: auto;
}

.choice-num-change input {
  min-width: 80rpx;
  max-width: 80rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  background-color: #e1e1e1;
  padding: 0 20rpx;
  text-align: center;
}

.choice-num-change image {
  width: 40rpx;
}

.order-goods-price .order-goods-name {
  font-size: 30rpx;
  color: #333;
  margin-top: 20rpx;
}

.pay-column {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  height: 100rpx;
  justify-content: space-between;
  font-size: 30rpx;
  line-height: 100rpx;
}

.pay-column .pay-finally {
  background-color: #fff;
  border-top: 1px solid #e1e1e1;
  box-sizing: border-box;
  justify-content: flex-end;
  flex: 1 1 auto;
  padding-right: 20rpx;
  color: #333;
}

.pay-finally view, .pay-finally text {
  color: #f55053;
}

.pay-finally view {
  font-size: 40rpx;
}

.pay-column .pay-now {
  background-color: #f55053;
  color: #fff;
  flex: 0 0 240rpx;
  text-align: center;
}

.no-goods {
  background-color: #fff;
  height: 100rpx;
  justify-content: center;
}

.no-goods .to-buy {
  justify-content: center;
  padding: 10rpx 20rpx;
  background-color: #f55053;
  color: #fff;
  border-radius: 10rpx;
  margin-left: 20rpx;
}
