.body {
  max-height: 100vh;
  overflow: hidden;
  position: relative;
}

.bg-image {
  width: 100%;
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  z-index: -1;
}

.share-tips {
  color: #fff;
  font-size: 36rpx;
  /* background-color: red; */
  text-align: center;
  line-height: 150rpx;
}

.share-panel {
  position: fixed;
  top: 150rpx;
  left: 30rpx;
  right: 30rpx;
  z-index: 1;
  background-color: #f7f8f9;
  border-radius: 20rpx;
  padding: 60rpx 30rpx;
}

.share-panel .panel-times {
  text-align: center;
  color: #666;
  font-size: 30rpx;
  line-height: 60rpx;
}

button#btn {
  font-size: 30rpx;
  color: #fff;
  background-color: #f55053;
  width: 90%;
  border-radius: 40rpx;
  justify-content: center;
  animation: change 2s ease infinite normal;
  margin-top: 30rpx;
}

button image {
  width: 40rpx;
  margin-right: 20rpx;
}

.user-list {
  justify-content: space-between;
}

.user-item {
  flex: 0 0 100rpx;
  position: relative;
}

.user-item image {
  width: 100rpx;
  border-radius: 50%;
  height: 100rpx;
}

.user-item .user-item-logo {
  width: 100%;
  height: 100rpx;
  border-radius: 50%;
  box-sizing: border-box;
  border: 1px dashed #999;
}

.user-item .label {
  position: absolute;
  color: #fff;
  background-color: #f55053;
  border-radius: 20rpx;
  font-size: 20rpx;
  padding: 0 10rpx;
  line-height: 30rpx;
  right: 0;
  bottom: 0;
}

.share-panel .panel-tips {
  font-size: 26rpx;
  text-align: center;
  margin-top: 40rpx;
  color: #999;
}

@keyframes change {
  0% {
    transform: scale(1, 1);
  }

  50% {
    transform: scale(1.1, 1.1);
  }

  100% {
    transform: scale(1, 1);
  }
}
