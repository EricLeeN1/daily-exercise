}

.master-post .master-post-title {
  border-radius: 10rpx;
  background-color: #f55053;
  padding: 10rpx 20rpx;
  display: inline-block;
  color: #fff;
  margin-bottom: 30rpx;
}

.master-post-list {
  margin-bottom: 30rpx;
}

.master-post-list .master-post-item {
  text-indent: 60rpx;
