.swiper {
  height: 360rpx;
}

.swiper .slide-image {
  width: 100%;
  height: 360rpx;
}

.swiper .slide-image image {
  width: 100%;
}

.nav {
  flex-wrap: wrap;
  justify-content: center;
  margin-left: -20rpx;
  margin-bottom: 30rpx;
}

.nav .nav-item {
  flex: 0 0 150rpx;
  background-color: #f55053;
  color: #fff;
  margin: 30rpx 0 0rpx 20rpx;
  padding: 10rpx 20rpx;
  justify-content: center;
  border-radius: 10rpx;
  font-size: 30rpx;
  line-height: 1.5;
}

.nav #share-button {
  margin: 30rpx 0 0rpx 20rpx;
  padding: 10rpx 20rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  line-height: 1.5;
  box-sizing: content-box;
}
.nav #contact-button {
  margin: 30rpx 0 0rpx 20rpx;
  padding: 10rpx 20rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  line-height: 1.5;
  box-sizing: content-box;
}

.deal-number {
  margin: 30rpx 0;
  border-top: 1px solid #f55053;
  border-bottom: 1px solid #f55053;
  font-size: 30rpx;
  height: 80rpx;
  justify-content: center;
}

.deal-number text {
  color: #f55053;
}

.nav1 {
  flex-wrap: wrap;
  justify-content: center;
  margin-bottom: 30rpx;
}

.nav1 .nav1-item{
  flex: 0 0 20%;
  font-size: 30rpx;
  height: 180rpx;
  justify-content: center;
  box-sizing: border-box;
}

.nav1-item  .nav1-item-img{
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 20rpx;
}

#scroll-view {
  /*transform: rotate(90deg);*/
  /* background-color: #191939; */
  height: 258px;
  border-radius: 5px;
  color: #999;
  box-sizing: border-box;
  padding: 0 30px;
  font-size: 24rpx;
  overflow: hidden;
  border-top: 1px solid #e1e1e1;
  /* margin-bottom: 60rpx; */
  /* position: absolute; */
  /* top: 290rpx; */
}

#scroll-view swiper-item {
  transform: rotate(-90deg);
}

.alone-item {
  height: 50px;
  display: flex;
  align-items: center;
  border-bottom: 1px dotted #e1e1e1;
  box-sizing: border-box;
  z-index: 0;
}

.alone-number {
  font-size: 10px;
  width: 26px;
  height: 26px;
  border: 1px solid #e1e1e1;
  border-radius: 50%;
  margin-right: 16px;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-basis: 26px;
}

.alone-text {
  overflow: hidden;
  flex: 0 0 60%;
}

.alone-border {
  margin-left: auto;
}

.read-beGet {
  margin-left: 5px;
  flex-basis: 100rpx;
}