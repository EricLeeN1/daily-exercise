image {
  display: block;
}

.flex-center {
  display: flex;
  align-items: center;
}

.msg-list {
  padding: 30rpx;
}

.no-push {
  width: 100%;
  height: 500rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction:column; 
}
.no-push image{
  width: 40%;
  margin-bottom: 30rpx;
}
.no-push-title{
  font-size: 30rpx;
  color: #333;
}

.msg-item {
  margin-bottom: 30rpx;
}

.msg-item .logo {
  align-self: flex-start;
  flex-basis: 60rpx;
  margin-right: 30rpx;
}

.msg-item .logo image {
  width: 60rpx;
  border-radius: 50%;
}

.msg-item .msg-content {
  flex-direction: column;
  align-items: flex-start;
}

.msg-title {
  width: 600rpx;
  font-size: 30rpx;
  color: #333;
  line-height: 1.5;
  margin-bottom: 15rpx;
  height: 45rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.msg-text {
  width: 600rpx;
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.msg-more {
  align-self: flex-end;
  margin-top: 20rpx;
}

.msg-more text {
  display: block;
  font-size: 26rpx;
  color: #f55053;
}

.msg-more image {
  width: 30rpx;
  /* margin-left: 20rpx; */
}
