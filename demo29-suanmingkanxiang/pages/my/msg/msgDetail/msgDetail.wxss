image {
  display: block;
}

.flex-center {
  display: flex;
  align-items: center;
}

.msg-list {
  padding: 30rpx;
}

.msg-item {
  margin-bottom: 30rpx;
}

.msg-item .logo {
  align-self: flex-start;
  flex-basis: 60rpx;
  margin-right: 30rpx;
}

.msg-item .logo image {
  width: 60rpx;
  border-radius: 50%;
}

.msg-item .msg-content {
  flex-direction: column;
  align-items: flex-start;
}

.msg-title {
  width: 600rpx;
  font-size: 30rpx;
  color: #333;
  line-height: 1.5;
  margin-bottom: 15rpx;
}

.msg-text {
  width: 600rpx;
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
}

.msg-more {
  margin-top: 20rpx;
  justify-content: flex-end;
  width: 100%;
}

.msg-more .msg-time {
  margin-left: auto;
  font-size: 24rpx;
  color: #999;
}

.msg-video {
  position: relative;
  margin-top: 30rpx;
}

.msg-video .image1 {
  width: 260rpx;
  height: 60rpx;
  margin-right: 10rpx;
}
.msg-video .image2 {
  width: 40rpx;
}

.msg-video text {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  line-height: 60rpx;
  color: #fff;
  text-align: center;
  font-size: 30rpx;
}
